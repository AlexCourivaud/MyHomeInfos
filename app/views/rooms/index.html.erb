<h1>Mes pièces</h1>

<div>
  <% @rooms.each do |room| %>
    <%= link_to room_path(room) do %>
      <p><%= room.id %> -
      <%= room.name %> </p>
    <% end %>
      <%= link_to "Supprimer", room_path(room), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cette pièce ?"} %>
    <%= link_to "Modifier", "rooms", class: "edit-room", data: { id: room.id } %>
      <td><%= link_to "Modifier", edit_room_path(room) %></td>


<br><br>
  <% end %>
</div>
<br><br>
<h2>Add a Room</h2>

<%= simple_form_for @room do |f| %>
  <%= f.input :name %>
  <%= f.button :submit %>
<% end %>
