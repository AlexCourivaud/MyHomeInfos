<h1><%= @room.name %></h1>

<p><%= @room.items.count %> éléments dans cette pièce:</p>

  <% @room.items.each do |item| %>
    <h4><%= item.name %> </h4>
        <p>->
    <%= item.description  %></p>
  <%= link_to "Supprimer", room_item_path(@room, item), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet item ?"} %>
  <br><br>
  <% end %>

<br><br>
  <%= simple_form_for [@room, @item] do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.button :submit, "Ajouter l'équipement" %>
  <% end %>

<br><br>

<%= simple_form_for [@room, @painting] do |f| %>
  <%= f.input :color %>
  <%= f.input :brand %>
  <%= f.input :date_painted %>
  <%= f.button :submit, "Ajouter la peinture" %>
<% end %>

<% @room.paintings.each do |painting| %>
  <p>Couleur : <%= painting.color %></p>
  <p>Marque : <%= painting.brand %></p>
  <p>Date de peinture : <%= painting.date_painted %></p>
<% end %>

<br><br>
        <%= link_to "Retour au dashboard", rooms_path, class: 'btn button-essential' %>
